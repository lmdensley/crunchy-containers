{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "crunchy-pg-replication-example",
        "creationTimestamp": null,
        "annotations": {
            "description": "Crunchy PostgreSQL Replication Example",
            "iconClass": "icon-database",
            "tags": "database,postgresql,replication"
        }
    },
    "parameters": [
    {
        "name": "PG_MODE",
        "description": "The mode we are running PG in",
        "value": "standalone"
    }, {
        "name": "PG_USER",
        "description": "The username that clients will use to connect to PG server",
        "value": "testuser"
    }, {
        "name": "PG_PASSWORD",
        "description": "The password for the PG master user",
        "generate": "expression",
        "from": "[a-zA-Z0-9]{12}"
    }, {
        "name": "PG_DATABASE",
        "description": "The name of the database that will be created",
        "value": "userdb"
    }, {
        "name": "PG_ROOT_PASSWORD",
        "description": "The password for the PG administrator",
        "generate": "expression",
        "from": "[a-zA-Z0-9]{12}"
    }],

    "objects": [ 
{
        "kind": "Service",
        "apiVersion": "v1",
        "metadata": {
            "name": "pg-standalone",
            "labels": {
                "name": "pg-standalone"
            }
        },
        "spec": {
            "ports": [{
                "protocol": "TCP",
                "port": 5432,
                "targetPort": 5432,
                "nodePort": 0
            }],
            "selector": {
                "name": "pg-standalone"
            }
        },
        "status": {
            "loadBalancer": {}
        }
}, 
{
    "kind": "Pod",
    "apiVersion": "v1",
    "metadata": {
        "name": "pg-standalone",
        "labels": {
            "name": "pg-standalone"
        }
    },
    "spec": {
        "containers": [{
            "name": "pg-standalone",
            "image": "crunchydata/crunchy-ose-pg",
            "ports": [{
                "containerPort": 5432,
                "protocol": "TCP"
            }],
                       "env": [
			{
                            "name": "PG_MODE",
                            "value": "${PG_MODE}"
                        }, {
                            "name": "PG_USER",
                            "value": "${PG_USER}"
                        }, {
                            "name": "PG_PASSWORD",
                            "value": "${PG_PASSWORD}"
                        }, {
                            "name": "PG_DATABASE",
                            "value": "${PG_DATABASE}"
                        }, {
                            "name": "PG_ROOT_PASSWORD",
                            "value": "${PG_ROOT_PASSWORD}"
                        }],
        "securityContext": {
        },


            "volumeMounts": [{
                "mountPath": "/pgdata",
                "name": "pgdata",
                "readOnly": false
            }]
        }],
        "volumes": [{
            "name": "pgdata",
                "emptyDir": { }
        }]
    }
}
]
}
