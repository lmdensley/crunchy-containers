{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "pg-replica-example",
        "creationTimestamp": null,
        "annotations": {
            "description": "PostgreSQL Replication Example",
            "iconClass": "icon-database",
            "tags": "database,postgresql,replication"
        }
    },
    "parameters": [{
        "name": "PG_USERNAME",
        "description": "The username configured in pgpool for client access",
        "value": "testuser"
    }, {
        "name": "PG_PASSWORD",
        "description": "The password configured in pgpool for client access",
        "value": "8nd8YH0CEpPE"
    }, {
        "name": "PGPOOL_SERVICE_NAME",
        "description": "The name of the pgpool Service",
        "value": "pgpool-rc"
    }, {
        "name": "PG_MASTER_SERVICE_NAME",
        "description": "The master configured in pgpool",
        "value": "pg-master"
    }, {
        "name": "PG_SLAVE_SERVICE_NAME",
        "description": "The slave configured in pgpool",
        "value": "pg-slave"
    }],
    "objects": [{
        "kind": "Service",
        "apiVersion": "v1",
        "metadata": {
            "name": "${PGPOOL_SERVICE_NAME}",
            "labels": {
                "name": "${PGPOOL_SERVICE_NAME}"
            }
        },
        "spec": {
            "ports": [{
                "protocol": "TCP",
                "port": 5432,
                "targetPort": 5432,
                "nodePort": 0
            }],
            "selector": {
                "name": "${PGPOOL_SERVICE_NAME}"
            }
        },
        "status": {
            "loadBalancer": {}
        }
    }, {
        "kind": "DeploymentConfig",
        "apiVersion": "v1",
        "metadata": {
            "name": "${PGPOOL_SERVICE_NAME}",
            "creationTimestamp": null
        },
        "spec": {
            "strategy": {
                "type": "Recreate",
                "resources": {}
            },
            "triggers": [{
                "type": "ConfigChange"
            }],
            "replicas": 1,
            "selector": {
                "name": "${PGPOOL_SERVICE_NAME}"
            },
            "template": {
                "metadata": {
                    "creationTimestamp": null,
                    "labels": {
                        "name": "${PGPOOL_SERVICE_NAME}"
                    }
                },
                "spec": {
                    "containers": [{
                        "name": "server",
                        "image": "crunchydata/crunchy-ose-pgpool",
                        "ports": [{
                            "containerPort": 5432,
                            "protocol": "TCP"
                        }],
                        "env": [ {
                            "name": "PG_USERNAME",
                            "value": "${PG_USERNAME}"
                        }, {
                            "name": "PG_PASSWORD",
                            "value": "${PG_PASSWORD}"
                        }, {
        			"name": "PG_MASTER_SERVICE_NAME",
        			"value": "${PG_MASTER_SERVICE_NAME}"
    			}, {
        			"name": "PG_SLAVE_SERVICE_NAME",
        			"value": "${PG_SLAVE_SERVICE_NAME}"
                        }],
                        "resources": {},
                        "terminationMessagePath": "/dev/termination-log",
                        "imagePullPolicy": "IfNotPresent",
                        "securityContext": {
                            "privileged": false
                        },
			"volumeMounts": [
			]

                    }],

		"volumes": [
		],
                    "restartPolicy": "Always",
                    "dnsPolicy": "ClusterFirst"
                }
            }
        },
        "status": {}
    }]
}
