{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "crunchy-pg-watch-example",
        "annotations": {
            "description": "Crunchy PostgreSQL watch Example",
            "iconClass": "icon-database",
            "tags": "database,postgresql,replication"
        }
    },
    "objects": [{
        "kind": "Pod",
        "apiVersion": "v1",
        "metadata": {
            "name": "pg-watch",
            "labels": {
                "name": "pg-watch"
            }
        },
        "spec": {
	    "serviceAccount": "pg-watcher",
            "containers": [
	    {
                "name": "pg-watcher",
                "image": "crunchydata/crunchy-watch",
                "env": [{
                    "name": "OSE_HOST",
                    "value": "openshift.default.svc.cluster.local"
                }, {
                    "name": "PG_MASTER_SERVICE",
                    "value": "pg-master"
                }, {
                    "name": "PG_SLAVE_SERVICE",
                    "value": "pg-slave"
                }, {
                    "name": "PG_MASTER_PORT",
                    "value": "5432"
                }, {
                    "name": "PG_MASTER_USER",
                    "value": "master"
                }, {
                    "name": "PG_DATABASE",
                    "value": "postgres"
                }]
            }]
        }
    }]
}
