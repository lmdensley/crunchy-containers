{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "replication-example",
        "creationTimestamp": null,
        "annotations": {
            "description": "Crunchy PostgreSQL Replication Example",
            "iconClass": "icon-database",
            "tags": "database,postgresql,replication"
        }
    },
    "parameters": [{
        "name": "PG_MASTER_USER",
        "description": "The username used for master-slave replication",
        "value": "master"
    }, {
        "name": "PG_MASTER_PASSWORD",
        "description": "The password for the PG master user",
        "generate": "expression",
        "from": "[a-zA-Z0-9]{12}"
    }, {
        "name": "PG_USER",
        "description": "The username that clients will use to connect to PG server",
        "value": "testuser"
    }, {
        "name": "PG_PASSWORD",
        "description": "The password for the PG master user",
        "generate": "expression",
        "from": "[a-zA-Z0-9]{12}"
    }, {
        "name": "PG_DATABASE",
        "description": "The name of the database that will be created",
        "value": "userdb"
    }, {
        "name": "PG_ROOT_PASSWORD",
        "description": "The password for the PG adminitrator",
        "generate": "expression",
        "from": "[a-zA-Z0-9]{12}"
    }],

    "objects": [{
        "kind": "Service",
        "apiVersion": "v1",
        "metadata": {
            "name": "ms-master",
            "labels": {
                "name": "ms-master"
            }
        },
        "spec": {
            "ports": [{
                "protocol": "TCP",
                "port": 5432,
                "targetPort": 5432,
                "nodePort": 0
            }],
            "selector": {
                "name": "ms-master"
            },
            "portalIP": "None",
            "type": "ClusterIP",
            "sessionAffinity": "None"
        },
        "status": {
            "loadBalancer": {}
        }
    }, {
        "kind": "Service",
        "apiVersion": "v1",
        "metadata": {
            "name": "ms-slave",
            "labels": {
                "name": "ms-slave"
            }
        },
        "spec": {
            "ports": [{
                "protocol": "TCP",
                "port": 5432,
                "targetPort": 5432,
                "nodePort": 0
            }],
            "selector": {
                "name": "ms-slave"
            },
            "portalIP": "None",
            "type": "ClusterIP",
            "sessionAffinity": "None"
        }
    }, {
        "kind": "Pod",
        "apiVersion": "v1",
        "metadata": {
            "name": "ms-master",
            "labels": {
                "name": "ms-master"
            }
        },
        "spec": {
            "containers": [{
                "name": "ms-master",
                "image": "crunchydata/crunchy-postgres",
                "ports": [{
                    "containerPort": 5432,
                    "protocol": "TCP"
                }],
                "env": [{
                    "name": "PG_MASTER_USER",
                    "value": "${PG_MASTER_USER}"
                }, {
                    "name": "PG_MODE",
                    "value": "master"
                }, {
                    "name": "PG_MASTER_PASSWORD",
                    "value": "${PG_MASTER_PASSWORD}"
                }, {
                    "name": "PG_USER",
                    "value": "${PG_USER}"
                }, {
                    "name": "PG_PASSWORD",
                    "value": "${PG_PASSWORD}"
                }, {
                    "name": "PG_DATABASE",
                    "value": "${PG_DATABASE}"
                }, {
                    "name": "PG_ROOT_PASSWORD",
                    "value": "${PG_ROOT_PASSWORD}"
                }],
                "securityContext": {
                    "capabilities": {
                    }
                },


                "volumeMounts": [{
                    "mountPath": "/pgdata",
                    "name": "pgdata",
                    "readOnly": false
                }]
            }],
            "volumes": [{
                "name": "pgdata",
                "emptyDir": {}
            }]
        }
    }, {
        "kind": "Pod",
        "apiVersion": "v1",
        "metadata": {
            "name": "ms-slave",
            "labels": {
                "name": "ms-slave"
            }
        },
        "spec": {
            "containers": [{
                "name": "ms-slave",
                "image": "crunchydata/crunchy-postgres",
                "ports": [{
                    "containerPort": 5432,
                    "protocol": "TCP"
                }],
                "env": [{
                    "name": "PG_USER",
                    "value": "${PG_USER}"
                }, {
                    "name": "PG_PASSWORD",
                    "value": "${PG_PASSWORD}"
                }, {
                    "name": "PG_MASTER_USER",
                    "value": "${PG_MASTER_USER}"
                }, {
                    "name": "PG_MODE",
                    "value": "slave"
                }, {
                    "name": "PG_MASTER_PASSWORD",
                    "value": "${PG_MASTER_PASSWORD}"
                }, {
                    "name": "PG_ROOT_PASSWORD",
                    "value": "${PG_ROOT_PASSWORD}"
                }, {
                    "name": "PG_MASTER_HOST",
                    "value": "ms-master"
                }, {
                    "name": "PG_MASTER_PORT",
                    "value": "5432"
                }, {
                    "name": "PG_DATABASE",
                    "value": "${PG_DATABASE}"
                }],
                "securityContext": {
                    "capabilities": {
                    }
                },

                "volumeMounts": [{
                    "mountPath": "/pgdata",
                    "name": "pgdata",
                    "readOnly": false
                }]
            }],
            "volumes": [{
                "name": "pgdata",
                "emptyDir": {}
            }]
        }
    }]
}
