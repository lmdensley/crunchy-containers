{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "pg-replica-example",
        "creationTimestamp": null,
        "annotations": {
            "description": "PostgreSQL Replication Example",
            "iconClass": "icon-database",
            "tags": "database,postgresql,replication"
        }
    },
    "parameters": [{
        "name": "PG_DATABASE",
        "description": "The name of the database that will be created",
        "value": "userdb"
    }, {
        "name": "PG_MASTER_SERVICE_NAME",
        "description": "The name of the PostgreSQL Service (used to DNS lookup, default: 'postgresql-master')",
        "value": "pg-master-rc-secret"
    }, {
        "name": "PG_SLAVE_SERVICE_NAME",
        "description": "The name of the PostgreSQL Service (used to DNS lookup, default: 'postgresql-slave')",
        "value": "pg-slave-rc-secret"
    }],
    "objects": [{
        "kind": "Service",
        "apiVersion": "v1",
        "metadata": {
            "name": "${PG_MASTER_SERVICE_NAME}",
            "labels": {
                "name": "${PG_MASTER_SERVICE_NAME}"
            }
        },
        "spec": {
            "ports": [{
                "protocol": "TCP",
                "port": 5432,
                "targetPort": 5432,
                "nodePort": 0
            }],
            "selector": {
                "name": "${PG_MASTER_SERVICE_NAME}"
            }
        },
        "status": {
            "loadBalancer": {}
        }
    }, {
        "kind": "Service",
        "apiVersion": "v1",
        "metadata": {
            "name": "${PG_SLAVE_SERVICE_NAME}",
            "labels": {
                "name": "${PG_SLAVE_SERVICE_NAME}"
            }
        },
        "spec": {
            "ports": [{
                "protocol": "TCP",
                "port": 5432,
                "targetPort": 5432,
                "nodePort": 0
            }],
            "selector": {
                "name": "${PG_SLAVE_SERVICE_NAME}"
            }
        },
        "status": {
            "loadBalancer": {}
        }
    }, {
        "kind": "DeploymentConfig",
        "apiVersion": "v1",
        "metadata": {
            "name": "${PG_MASTER_SERVICE_NAME}",
            "creationTimestamp": null
        },
        "spec": {
            "strategy": {
                "type": "Recreate",
                "resources": {}
            },
            "triggers": [{
                "type": "ConfigChange"
            }],
            "replicas": 1,
            "selector": {
                "name": "${PG_MASTER_SERVICE_NAME}"
            },
            "template": {
                "metadata": {
                    "creationTimestamp": null,
                    "labels": {
                        "name": "${PG_MASTER_SERVICE_NAME}"
                    }
                },
                "spec": {
                    "containers": [{
                        "name": "server",
                        "image": "crunchydata/crunchy-pg",
                        "ports": [{
                            "containerPort": 5432,
                            "protocol": "TCP"
                        }],
                        "env": [{
                            "name": "PG_MODE",
                            "value": "master"
                        }, {
                            "name": "PG_DATABASE",
                            "value": "${PG_DATABASE}"
                        }],
                        "resources": {},
                        "terminationMessagePath": "/dev/termination-log",
                        "imagePullPolicy": "IfNotPresent",
                        "securityContext": {
                            "privileged": false
                        },
                        "volumeMounts": [{
                                "mountPath": "/pgdata",
                                "name": "pgdata",
                                "readOnly": false
                            }, {
                                "mountPath": "/pguser",
                                "name": "pguser-volume"
                            }, {
                                "mountPath": "/pgroot",
                                "name": "pgroot-volume"
                            }, {
                                "mountPath": "/pgmaster",
                                "name": "pgmaster-volume"
                            }

                        ]

                    }],
                    "volumes": [{
                        "name": "pgdata",
                        "emptyDir": {}
                    }, {
                        "name": "pguser-volume",
                        "secret": {
                            "secretName": "pguser"
                        }
                    }, {
                        "name": "pgroot-volume",
                        "secret": {
                            "secretName": "pgroot"
                        }
                    }, {
                        "name": "pgmaster-volume",
                        "secret": {
                            "secretName": "pgmaster"
                        }
                    }],

                    "restartPolicy": "Always",
                    "dnsPolicy": "ClusterFirst"
                }
            }
        },
        "status": {}
    }, {
        "kind": "DeploymentConfig",
        "apiVersion": "v1",
        "metadata": {
            "name": "${PG_SLAVE_SERVICE_NAME}",
            "creationTimestamp": null
        },
        "spec": {
            "strategy": {
                "type": "Recreate",
                "resources": {}
            },
            "triggers": [{
                "type": "ConfigChange"
            }],
            "replicas": 1,
            "selector": {
                "name": "${PG_SLAVE_SERVICE_NAME}"
            },
            "template": {
                "metadata": {
                    "creationTimestamp": null,
                    "labels": {
                        "name": "${PG_SLAVE_SERVICE_NAME}"
                    }
                },
                "spec": {
                    "containers": [{
                        "name": "server",
                        "image": "crunchydata/crunchy-pg",
                        "ports": [{
                            "containerPort": 5432,
                            "protocol": "TCP"
                        }],
                        "env": [{
                            "name": "PG_MASTER_HOST",
                            "value": "${PG_MASTER_SERVICE_NAME}"
                        }, {
                            "name": "PG_MASTER_PORT",
                            "value": "5432"
                        }, {
                            "name": "PG_MASTER_SERVICE_NAME",
                            "value": "${PG_MASTER_SERVICE_NAME}"
                        }, {
                            "name": "PG_MODE",
                            "value": "slave"
                        }, {
                            "name": "PG_DATABASE",
                            "value": "${PG_DATABASE}"
                        }],
                        "resources": {},
                        "terminationMessagePath": "/dev/termination-log",
                        "imagePullPolicy": "IfNotPresent",
                        "securityContext": {
                            "privileged": false
                        },
                        "volumeMounts": [{
                                "mountPath": "/pgdata",
                                "name": "pgdata",
                                "readOnly": false
                            }, {
                                "mountPath": "/pguser",
                                "name": "pguser-volume"
                            }, {
                                "mountPath": "/pgroot",
                                "name": "pgroot-volume"
                            }, {
                                "mountPath": "/pgmaster",
                                "name": "pgmaster-volume"
                            }
                        ]

                    }],
                    "volumes": [{
                        "name": "pgdata",
                        "emptyDir": {}
                    }, {
                        "name": "pguser-volume",
                        "secret": {
                            "secretName": "pguser"
                        }
                    }, {
                        "name": "pgroot-volume",
                        "secret": {
                            "secretName": "pgroot"
                        }
                    }, {
                        "name": "pgmaster-volume",
                        "secret": {
                            "secretName": "pgmaster"
                        }
                    }],

                    "restartPolicy": "Always",
                    "dnsPolicy": "ClusterFirst"
                }
            }
        },
        "status": {}
    }]
}
